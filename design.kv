#:kivy 1.11.1
<GameScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Rummy"
            id: title
        GridLayout:
            cols: 3
            Label:
                text: 'Open Card'
            Button:
                text: ''
                id: open_card_display
                background_normal: root.initialize_discard()
                on_press: root.click_open_card()
            Button:
                size_hint: 0.4, 0.1
                text: "Sort"
                id: sort
                on_press: root.sort_hand()
        GridLayout:
            cols: 3
            GridLayout:
                cols: 11
                Button:
                    id: c1
                    text: "C1"
                    background_normal: root.get_card_fp(root.ids.c1)
                    on_press: root.handle_clicked_card(root.ids.c1)
                Button:
                    id: c2
                    text: "C2"
                    background_normal: root.get_card_fp(root.ids.c2)
                    on_press: root.handle_clicked_card(root.ids.c2)
                Button:
                    id: c3
                    text: "C3"
                    background_normal: root.get_card_fp(root.ids.c3)
                    on_press: root.handle_clicked_card(root.ids.c3)
                Button:
                    id: c4
                    text: "C4"
                    background_normal: root.get_card_fp(root.ids.c4)
                    on_press: root.handle_clicked_card(root.ids.c4)
                Button:
                    id: c5
                    text: "C5"
                    background_normal: root.get_card_fp(root.ids.c5)
                    on_press: root.handle_clicked_card(root.ids.c5)
                Button:
                    id: c6
                    text: "C6"
                    background_normal: root.get_card_fp(root.ids.c6)
                    on_press: root.handle_clicked_card(root.ids.c6)
                Button:
                    id: c7
                    text: "C7"
                    background_normal: root.get_card_fp(root.ids.c7)
                    on_press: root.handle_clicked_card(root.ids.c7)
                Button:
                    id: c8
                    text: "C8"
                    background_normal: root.get_card_fp(root.ids.c8)
                    on_press: root.handle_clicked_card(root.ids.c8)
                Button:
                    id: c9
                    text: "C9"
                    background_normal: root.get_card_fp(root.ids.c9)
                    on_press: root.handle_clicked_card(root.ids.c9)
                Button:
                    id: c10
                    text: "C10"
                    background_normal: root.get_card_fp(root.ids.c10)
                    on_press: root.handle_clicked_card(root.ids.c10)
                Button:
                    text: "Switch player"
                    on_press: root.switch_player()
        GridLayout:
            cols: 2
            GridLayout:
                cols: 2
                size_hint: 0.7, 0.7
                Button:
                    id: draw_open_card
                    text: "Draw Open Card"
                    size_hint: 0.5, 0.5
                    on_press: root.draw_open_card()
                    disabled: root.get_init_disable("Draw")
                Button:
                    id: draw_deck_card
                    text: "Draw Deck Card"
                    size_hint: 0.5, 0.5
                    on_press: root.draw_deck_card()
                    disabled: root.get_init_disable("Draw")
            Button:
                id: discard
                text: "Discard"
                size_hint: 0.4, 0.1
                disabled: root.get_init_disable(root.ids.discard.text)
                on_press: root.discard()
<RootWidget>:
    GameScreen:
        name: "game_screen"