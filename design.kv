#:kivy 1.11.1
<GameScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Rummy"
            id: title
        GridLayout:
            cols: 2
            Label:
                text: root.get_open_card()
            Button:
                size_hint: 0.4, 0.1
                text: "Sort"
                id: sort
                on_press: root.sort_hand()
        GridLayout:
            cols: 3
            GridLayout:
                cols: 10
                Button:
                    id: c1
                    text: "C1"
                    background_normal: root.get_card_fp(root.ids.c1.text)
                    on_press: root.handle_clicked_card(root.ids.c1)
                Button:
                    id: c2
                    text: "C2"
                    background_normal: root.get_card_fp(root.ids.c2.text)
                    on_press: root.handle_clicked_card(root.ids.c2)
                Button:
                    id: c3
                    text: "C3"
                    background_normal: root.get_card_fp(root.ids.c3.text)
                    on_press: root.handle_clicked_card(root.ids.c3)
                Button:
                    id: c4
                    text: "C4"
                    background_normal: root.get_card_fp(root.ids.c4.text)
                    on_press: root.handle_clicked_card(root.ids.c4)
                Button:
                    id: c5
                    text: "C5"
                    background_normal: root.get_card_fp(root.ids.c5.text)
                    on_press: root.handle_clicked_card(root.ids.c5)
                Button:
                    id: c6
                    text: "C6"
                    background_normal: root.get_card_fp(root.ids.c6.text)
                    on_press: root.handle_clicked_card(root.ids.c6)
                Button:
                    id: c7
                    text: "C7"
                    background_normal: root.get_card_fp(root.ids.c7.text)
                    on_press: root.handle_clicked_card(root.ids.c7)
                Button:
                    id: c8
                    text: "C8"
                    background_normal: root.get_card_fp(root.ids.c8.text)
                    on_press: root.handle_clicked_card(root.ids.c8)
                Button:
                    id: c9
                    text: "C9"
                    background_normal: root.get_card_fp(root.ids.c9.text)
                    on_press: root.handle_clicked_card(root.ids.c9)
                Button:
                    id: c10
                    text: "C10"
            Button:
                id: draw
                text: "Draw"
                on_press: root.go_to_draw_screen()
                size_hint: 0.4, 0.1
                disabled: True
        GridLayout:
            cols: 2
            Button:
                text: "Switch player"
                on_press: root.switch_player()
            Button:
                id: discard
                text: "Discard"
                size_hint: 0.4, 0.1
                disabled: True
<DrawScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Button:
                id: draw_open_card
                text: ""
                background_normal: root.display_open_card_image()
                on_press: root.draw_open_card()
            Button:
                id: draw_deck_card
                text: ""
                background_normal: "card_images//gray_back.png"
                on_press: root.draw_deck_card()
        GridLayout:
            cols: 2
            size_hint: 0.5, 0.2
            Label:
                text: "Draw Open Card"
            Label:
                text: "Draw Deck Card"

<RootWidget>:
    GameScreen:
        name: "game_screen"
    DrawScreen:
        name: "draw_screen"